source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.0'

gem 'sass-rails'
gem 'coffee-rails'
gem 'uglifier'
gem 'omniauth-mygov', :git => 'https://github.com/GSA-OCSIT/omniauth-mygov.git'
gem 'haml'
gem 'haml-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 1.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', :require => false
end

group :development do
  gem 'thin'
  gem 'haml-rails'
  gem 'hpricot'
  gem 'ruby_parser'
  gem 'letter_opener'
  gem 'railroady'
  gem 'pry'
  gem 'pry-nav'
  gem 'debugger'
  gem 'brakeman', :require => false
  gem 'capistrano'
  gem 'debugger'
end

group :development, :test do
  gem 'sqlite3'
  gem 'rspec'
  gem 'rspec-rails'
  gem 'ZenTest'
  gem 'autotest-rails'
  gem 'webrat'
  gem 'capybara'
  gem 'pry'
end

group :production do
	gem 'pg'
end
